@model Frost.Models.EndorsementRequest

@{
    ViewData["Title"] = "Request";
}

<h2>Request Details</h2>
<div class="container-fluid">
    <div class="col-md-12"><h3>Contact Information</h3></div>
    <div class="col-md-2">Name</div><div class="col-md-4">@Model.Name</div>
    <div class="col-md-2">Email</div><div class="col-md-4">@Model.Email</div>
    <div class="col-md-2">Organization</div><div class="col-md-4">@Model.Organization</div>
    <div class="col-md-12"><h3>Application Information</h3></div>
    <div class="col-md-2">Application</div><div class="col-md-4">@Model.Application</div>
    <div class="col-md-2">Url</div><div class="col-md-4">@Model.ApplicationUrl</div>
    <div class="col-md-2">Login</div><div class="col-md-4">@Model.LoginUri</div>
    <div class="col-md-2">Redirect</div><div class="col-md-4">@Model.RedirectUris[0]</div>
</div>


@using (Html.BeginForm("Approve","Manage"))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id"/>
    <button type="submit" class="btn btn-success" style="margin-top:20px;">Approve</button>
}